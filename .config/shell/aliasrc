#!/bin/sh

XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
aliasrc="$XDG_CONFIG_HOME"/shell/aliasrc

# Shortcut
alias \
  balias='[ -f $aliasrc ] && $EDITOR $aliasrc && . $aliasrc' \
	rm='f(){ /usr/bin/echo use del!; }; f' \
	n='/usr/bin/newsboat' \
  m='/usr/bin/neomutt' \
  mutt='/usr/bin/neomutt' \
  v='/usr/bin/nvim' \
  vim='/usr/bin/nvim' \
  copy='/usr/bin/xclip -selection clipboard' \
  myip='/usr/bin/curl -L https://ipinfo.io/ip' \
  del='/usr/bin/trash-put' \
  cpu='/usr/bin/cpupower frequency-info' \
  powersave='sudo /usr/bin/cpupower frequency-set -g powersave' \
  performance='sudo /usr/bin/cpupower frequency-set -g performance' \
  ondemand='sudo /usr/bin/cpupower frequency-set -g ondemand' \
  conservative='sudo /usr/bin/cpupower frequency-set -g conservative' \
  schedutil='sudo /usr/bin/cpupower frequency-set -g schedutil' \
	freq800='sudo /usr/bin/cpupower frequency-set -u 800MHz' \
	freq1200='sudo /usr/bin/cpupower frequency-set -u 1200MHz' \
	freq1800='sudo /usr/bin/cpupower frequency-set -u 1800MHz' \
	freq2700='sudo /usr/bin/cpupower frequency-set -u 2700MHz' \
	freq3500='sudo /usr/bin/cpupower frequency-set -u 3500MHz' \
	freq4000='sudo /usr/bin/cpupower frequency-set -u 4000MHz' \
	xo='f(){ /usr/bin/nohup /usr/bin/xdg-open "$@" >/dev/null 2>&1 & }; f' \
	nh='f(){ /usr/bin/nohup "$@" >/dev/null 2>&1 & }; f' \
  mkd='/usr/bin/mkdir -pv' \
	e='/usr/bin/ranger' \
	mycc='/usr/bin/c99 -Wall -g -o binary' \
	t='$EDITOR ~/doc/TODO'

# Fix
alias \
  ssh='TERM=''xterm-256color'' ssh' \
	mbsync='/usr/bin/mbsync -c "$XDG_CONFIG_HOME"/isync/mbsyncrc'

# Workspace
alias \
  cduni='cd	~/studyspace/uni' \
	s='cd ~/.local/bin' \
	cdaction='cd ~/workspace/website/action-server.com' \
	cdlinksync='cd ~/workspace/git/linksync' \
	cdgit='cd ~/workspace/git' \
	cdblog4j='cd ~/workspace/git/blog4j' \
	cdjameel='cd ~/workspace/git/jameel'

# System
alias \
  ls='/usr/bin/ls --color=auto --group-directories-first' \
  grep='/usr/bin/grep --color=auto' \
  diff='/usr/bin/diff --color=auto' \
  la='/usr/bin/ls -A' \
  l='/usr/bin/ls -alh' \
  ll='/usr/bin/ls -alhF' \
	free='/usr/bin/free -h'

# Git
alias \
  gits='/usr/bin/git status' \
  g='/usr/bin/git status' \
  gitl='/usr/bin/git log' \
  gitch='/usr/bin/git checkout' \
  gitb='/usr/bin/git branch' \
  gitd='/usr/bin/git diff' \
	gitc='/usr/bin/git commit' \
	gitds='/usr/bin/git diff --staged'

# Docker
alias \
  dkps='/usr/bin/docker ps -a' \
  dkr='/usr/bin/docker run' \
  dks='/usr/bin/docker stop' \
  dkrm='/usr/bin/docker rm' \
  dkrmi='/usr/bin/docker rmi' \
  dkcu='/usr/bin/docker-compose up' \
  dkcd='/usr/bin/docker-compose down' \
  dkcr='/usr/bin/docker-compose restart'

# Pacman
alias \
	paci='f(){ sudo /usr/bin/pacman -S "$@" && /usr/bin/notify-send "Pacman" "Package(s) installed"; }; f' \
  pacr='sudo /usr/bin/pacman -Rns' \
  pacu='sudo /usr/bin/pacman -Syyuu && /usr/bin/flatpak update --user --noninteractive && /usr/bin/notify-send "Package Manager" "System updated"'\
	pacs='/usr/bin/pacman -Ss'

